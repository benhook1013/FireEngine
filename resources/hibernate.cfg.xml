<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- DB Info -->
		<property name="hibernate.dialect">
			org.hibernate.dialect.SQLServerDialect
		</property>
		<property name="hibernate.connection.driver_class">
			com.microsoft.sqlserver.jdbc.SQLServerDriver
		</property>

		<!-- Connection Info -->
		<property name="hibernate.connection.url">
			jdbc:sqlserver://BEN_DESKTOP\DEVDB
		</property>
		<property name="hibernate.connection.verifyServerCertificate">
			false
		</property>
		<property name="hibernate.connection.username">
			FireEngine
		</property>
		<property name="hibernate.connection.password">
			FireEnginePassword
		</property>
		

		<!-- List of XML mapping files -->
		<mapping class="fireengine.characters.player.PlayerCharacter" />
		<mapping class="fireengine.characters.player.PCSettings" />
		<mapping class="fireengine.characters.character_class.CharacterClass" />
		<mapping
			class="fireengine.characters.character_class.skillsets.Skillset" />
		<mapping
			class="fireengine.characters.character_class.skillsets.SkillsetMartialism" />
		<mapping class="fireengine.characters.condition.PCCondition" />
		<mapping class="fireengine.characters.condition.Level" />
		<mapping class="fireengine.characters.condition.Health" />
		<mapping class="fireengine.characters.condition.Mana" />

		<mapping class="fireengine.gameworld.maps.GameMap" />
		<mapping class="fireengine.gameworld.maps.BaseRoom" />
		<mapping class="fireengine.gameworld.maps.BaseRoomExit" />
	</session-factory>
</hibernate-configuration>